# ===================================
# Token Invalidation Environment Variables
# ===================================

# Redis Configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Token Settings
JWT_EXPIRES_IN=15m
# Note: JWT_SECRET still needed for backward compatibility
# but new system uses opaque tokens

# Database (existing)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rbac_db
DB_USER=postgres
DB_PASSWORD=123456
DB_DEBUG=false

# Server
PORT=3000
NODE_ENV=development

# Cookie Configuration
AUTH_COOKIE_NAME=auth_token
AUTH_COOKIE_DOMAIN=
AUTH_COOKIE_SAME_SITE=lax
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_MAX_AGE=604800000
